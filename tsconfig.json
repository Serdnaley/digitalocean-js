{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ]
}
